<p id="notice"><%= notice %></p>

<h1>Question List</h1>
<%= link_to 'New Question', new_question_path,class:"btn btn-success" %>
<div class="row">

    <% @questions.each do |question| %>
        <div class="col-md-6">
        <h3><%= link_to question.title, question %></h3>
        <%
          if question.category.nil?
            question.category = ""
          end
         %>
        <p>
          <% question.category.split(";").each do |cat| %>
          <span class="label label-primary"><%= cat %></span>
          <% end %>
        </p>
        <%= question.quest.html_safe %>
        <hr>
      </div>
    <% end %>

</div>
